<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nan.javaonlinetradingsystem.mapper.UsersMapper">

    <!-- 配置 ResultMap 映射表 -->
    <resultMap id="UsersResult" type="Users">
        <result property="userID" column="UserID"/>
        <result property="userName" column="UserName"/>
        <result property="password" column="Password"/>
        <result property="email" column="Email"/>
        <result property="role" column="Role"/>
        <result property="registrationDate" column="RegistrationDate"/>
    </resultMap>

    <!-- 插入用户，数据库自动生成 UserID -->
    <insert id="insertUsers" parameterType="com.nan.javaonlinetradingsystem.domain.Users" useGeneratedKeys="true" keyProperty="userID">
        INSERT INTO Users (UserName, Password, Email, Role, RegistrationDate)
        VALUES (#{userName}, #{password}, #{email}, #{role}, #{registrationDate})
    </insert>

</mapper>